{
  "name": "@vibe-forge/cli",
  "description": "Vibe Forge CLI",
  "version": "0.1.0",
  "imports": {
    "#~/*": {
      "__vibe-forge__": {
        "default": "./src/*.ts"
      }
    }
  },
  "exports": {
    "./package.json": "./package.json",
    "./config": {
      "__vibe-forge__": {
        "default": "./src/config.ts"
      },
      "default": {
        "import": "./dist/config.mjs",
        "require": "./dist/config.js"
      }
    }
  },
  "bin": {
    "vibe-forge": "./cli.js",
    "vforge": "./cli.js",
    "vf": "./cli.js",
    "vf-call-hook": "./call-hook.js"
  },
  "scripts": {
    "test": "vitest run"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "@vibe-forge/core": "workspace:^",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "fast-glob": "^3.3.3",
    "node-notifier": "^10.0.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node-notifier": "^8.0.5",
    "esbuild-register": "^3.6.0"
  }
}
